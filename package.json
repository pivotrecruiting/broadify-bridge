{
  "name": "electron-vite-template",
  "private": true,
  "version": "0.5.4",
  "type": "module",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "npm-run-all --parallel dev:react dev:electron",
    "dev:react": "vite",
    "dev:electron": "npm run build:graphics-renderer && npm run transpile:electron && cross-env NODE_ENV=development electron .",
    "build:app": "tsc -b && vite build",
    "build:bridge": "npm --prefix apps/bridge run build",
    "build:graphics-renderer": "npm --prefix apps/bridge run build:graphics-renderer",
    "build": "npm-run-all build:bridge build:graphics-renderer build:app",
    "lint": "eslint .",
    "preview": "vite preview",
    "transpile:electron": "tsc --project src/electron/tsconfig.json",
    "dist:mac": "npm run transpile:electron && npm run build && electron-builder --mac --arm64",
    "dist:mac:arm64": "npm run transpile:electron && npm run build && electron-builder --mac --arm64",
    "dist:mac:x64": "npm run transpile:electron && npm run build && electron-builder --mac --x64",
    "dist:win": "npm run transpile:electron && npm run build && electron-builder --win --x64",
    "dist:linux": "npm run transpile:electron && npm run build && electron-builder --linux --x64",
    "dist:all": "npm run dist:mac:arm64 && npm run dist:mac:x64 && npm run dist:win && npm run dist:linux",
    "release": "npm run dist:all",
    "test:workflow": "bash scripts/test-workflow.sh"
  },
  "dependencies": {
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.1.2",
    "@sentry/electron": "^7.5.0",
    "@tailwindcss/vite": "^4.0.6",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.2",
    "lucide-react": "^0.475.0",
    "os-utils": "^0.0.14",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "shadcn": "^3.5.0",
    "tailwind-merge": "^3.0.1",
    "tailwindcss": "^4.0.6",
    "tailwindcss-animate": "^1.0.7",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.19.0",
    "@types/os-utils": "^0.0.4",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@types/ws": "^8.18.1",
    "@vitejs/plugin-react": "^4.3.4",
    "cross-env": "^7.0.3",
    "electron": "^39.2.7",
    "electron-builder": "^25.1.8",
    "eslint": "^9.19.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.18",
    "globals": "^15.14.0",
    "npm-run-all": "^4.1.5",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.22.0",
    "vite": "^6.1.0"
  }
}

{
  "appId": "com.georgimy.electron-template",
  "productName": "Broadify Bridge",
  "files": ["dist-electron/**", "dist-react/**"],
  "asar": true,
  "extraResources": [
    {
      "from": "apps/bridge/dist",
      "to": "bridge/dist"
    },
    {
      "from": "apps/bridge/node_modules",
      "to": "bridge/node_modules"
    },
    {
      "from": "apps/bridge/native/decklink-helper/decklink-helper",
      "to": "native/decklink-helper/decklink-helper"
    }
  ],
  "icon": "./icon.png",
  "mac": {
    "target": "dmg",
    "icon": "./icon.png",
    "category": "public.app-category.utilities"
  },
  "linux": {
    "target": "AppImage",
    "category": "Utility",
    "icon": "./icon.png"
  },
  "win": {
    "target": ["portable", "msi"],
    "icon": "./icon.png"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true
  }
}
